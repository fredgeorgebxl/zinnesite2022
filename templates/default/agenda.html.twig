{% trans_default_domain 'Front' %}
{% extends 'base.html.twig' %}
{% block title %}{{ 'website.title'|trans }} | {{ 'website.agenda'|trans }}{% endblock %}
{% block opengraph %}
<meta property="og:title" content="{{ 'website.agenda'|trans }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ absolute_url(path('agenda')) }}" />
<meta property="og:image" content="{# absolute_url(asset('images/og-default.jpg')) #}" />
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="profile" href="http://microformats.org/profile/hcalendar"/>
{% endblock %}
{% block bodytag %}<body class="agenda">{% endblock %}
{% block body %}
    <div class="pageintro bgcolor">
        <div class="container">
            <div class="row">
                <div class="col-md-4 pt-5">
                    <h1>{{ 'website.agenda'|trans }}</h1>
                </div>
                <div class="col-md-8 py-5">
                    {{ text_block('agenda_intro') }}
                </div>
            </div>
        </div>
    </div>
    <section class="diagbg mb-5">
        <div class="container agenda">
            {% if events is defined and events|length %}
            <h2 class="mb-4">{{ 'website.nextevents'|trans }}</h2>
            {% endif %}
            <div class="row">
            {% for event in events %}
                {{ include('default/eventdetail.html.twig', {large: true}) }}
            {% endfor %}
            </div>
            <h2 class="mb-4">{{ 'website.pastevents'|trans }}</h2>
            {% set curseason = null %}
            {% for event in pastevents %}
                {% if curseason != event.season %}
                {% if not loop.first %}
                </div>
                {% endif %}
                <h3 class="season mt-4">{{ 'website.season'|trans }} {{ event.season }}</h3>
                <div class="row">
                {% endif %}
                    {{ include('default/eventdetail.html.twig') }}
                {% set curseason = event.season %}
            {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}