{% trans_default_domain 'Front' %}
{% extends 'base.html.twig' %}
{% block title %}{{ 'website.title'|trans }} | {{ 'website.membres'|trans }}{% endblock %}
{% block opengraph %}
<meta property="og:title" content="{{ 'website.membres'|trans }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ absolute_url(path('membres')) }}" />
<meta property="og:image" content="{# absolute_url(asset('images/og-default.jpg')) #}" />
{% endblock %}
{% block bodytag %}<body class="membres">{% endblock %}
{% block body %}
<div class="container">
    {% if chef is defined and chef is not null %}
    <div class="chef row bgcolor">
        <div class="col-md-6 col-lg-4">
            {{ cropped_image(chef.picture, 'site_user_square') }}
        </div>
        <div class="col-md-6 col-lg-8">
            <h2>{{ chef.firstname }} {{ chef.lastname }}{{ 'website.chef'|trans }}</h2>
            {{ text_block('chef_description') }}
        </div>
    </div>
    {% endif %}
    <h2>{{ 'website.choristes'|trans }}</h2>
    <div class="row">
    {% for member in members %}
        <div class="membre col-sm-6 col-md-4 col-lg-3">
            <h3>{{ member.firstname }}</h3>
            <div class="picture">{{ cropped_image(member.picture, 'site_user_square') }}</div>
            <div class="voice {{ member.voice }}">{{ ('website.'~member.voice)|trans }}</div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}