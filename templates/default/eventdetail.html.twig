{% if large is defined and large == true %}
<div class="container concert-preview">
{% else %}
<div class="col-md-6 concert-preview">
{% endif %}
    <div class="row">
        <div class="col-md-4 eventimage">
            {% if event.picture != null %}
            {{ cropped_image(event.picture, 'site_gallery_preview') }}
            {% endif %}
        </div>
        <div class="col-md-8">
            <p class="date">{{ event.date|format_datetime(pattern="dd/MM/yyyy") }}</p>
            <p class="name">{{ event.name }}</p>
            <p class="place">{{ event.location }}</p>
        </div>
    </div>
</div>