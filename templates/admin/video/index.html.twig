{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% import "admin/macros.html.twig" as macros %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'videos.videos'|trans}}{% endblock %}
{% block body %}
    <h1 class="mb-3">{{ 'videos.videos'|trans}}</h1>
    <div class="section mb-3">
        <a  class="btn btn-primary" href="{{ path('video_new') }}">{{ 'events.create'|trans}} <span class="fa fa-plus-square" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'videos.title'|trans}}</th>
            <th>{{ 'videos.link'|trans}}</th>
            <th>{{ 'general.published'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for vid in videos %}
        <tr>
            <td>{{ vid.title }}</td>
            <td><a href="{{ vid.link }}" target="_blank">{{ vid.link }}</a></td>
            <td>{{ macros.publishButton('video', vid.id, vid.published) }}</td>
            <td>{{ macros.editButton('video', vid.id) }}</td>
            <td>{{ macros.deleteButton('video', vid.id) }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
