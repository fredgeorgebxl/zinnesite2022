{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% import "admin/macros.html.twig" as macros %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'repertoire.repertoire'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'repertoire.repertoire'|trans}}</h1>
    <div class="section">
        <a class="btn btn-primary" href="{{ path('repertoire_new') }}">{{ 'repertoire.create'|trans}} <span class="fa fa-plus-square" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'repertoire.title'|trans}}</th>
            <th>{{ 'repertoire.current'|trans}}</th>
            <th>{{ 'general.published'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for rep in repertoires %}
        <tr>
            <td>{{ rep.title }}</td>
            <td>{{ rep.active }}</td>
            <td>{{ macros.publishButton('repertoire', rep.id, rep.published) }}</td>
            <td>{{ macros.editButton('repertoire', rep.id) }}</td>
            <td>{{ macros.deleteButton('repertoire', rep.id) }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}