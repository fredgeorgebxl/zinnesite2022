{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <h1> {{ 'general.edit'|trans }} '{{ form.title.vars.value }}'</h1>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form._token) }}
        {{ form_row(form.title) }}
        {{ form_row(form.date) }}
        {{ form_row(form.dateto) }}
        {{ form_row(form.description) }}
        <div class="form-group">
            <div class="clearfix gallery">
                {# for key, image in images %}
                    {{ styled_image(image, 'thumb') }}
                {% endfor #}
            </div>
        </div>
        <div class="form-group mb-3">{{ form_widget(form.addimages, {'attr': {'class': 'btn btn-outline-secondary'}}) }} {# if images|length %}{{ form_widget(form.edit_images) }}{% endif #}</div>
        {{ form_row(form.save) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}