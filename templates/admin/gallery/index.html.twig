{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% import "admin/macros.html.twig" as macros %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'gallery.galleries'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'gallery.galleries'|trans}}</h1>
    <div class="section">
        <a  class="btn btn-primary" href="{{ path('gallery_new') }}">{{ 'gallery.create'|trans}} <span class="fa fa-plus-square" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'gallery.title'|trans}}</th>
            <th>{{ 'general.date'|trans}}</th>
            <th>{{ 'general.published'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for gl in galleries %}
        <tr>
            <td>{{ gl.title }}</td>
            <td>{{ macros.dateRange(gl.date, gl.dateto) }}</td>
            <td>{{ macros.publishButton('gallery', gl.id, gl.published) }}</td>
            <td>{{ macros.editButton('gallery', gl.id) }}</td>
            <td>{{ macros.deleteButton('gallery', gl.id) }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
