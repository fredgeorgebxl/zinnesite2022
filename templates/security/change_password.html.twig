{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% form_theme form with 'bootstrap_5_layout.html.twig' %}
{% block title %}{{ 'general.administration'|trans}} | {{'security.change-password'|trans}}{% endblock %}

{% block body %}
<h1>
    {{'security.change-password'|trans}} 
    {% if user %}{{ 'security.for'|trans ~ ' ' ~ user.firstname ~ ' ' ~ user.lastname }}{% endif %}
</h1>
{% if error is not empty %}
<div class="alert alert-danger" role="alert">
    {{ error }}
</div>
{% endif %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
{{ form_row(form._token) }}
{% if not user %}
    {{ form_row(form.current_password) }}
{% endif %}
{{ form_row(form.new_password.first) }}
{{ form_row(form.new_password.second) }}
{{ form_row(form.save) }}
{{ form_end(form, {'render_rest': false}) }}
{% endblock %}
